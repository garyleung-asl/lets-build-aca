@page
@model Healthtrackr.Web.Pages.EditModel
@{
}

<h1>Weight Entry</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Weight!.WeightId" />
            <div class="form-group">
                <label asp-for="Weight!.MeasurementDate" class="control-label"></label>
                <input asp-for="Weight!.MeasurementDate" class="form-control" />
                <span asp-validation-for="Weight!.MeasurementDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Weight!.WeightInKG" class="control-label"></label>
                <input asp-for="Weight!.WeightInKG" class="form-control" />
                <span asp-validation-for="Weight!.WeightInKG" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Weight!.MeasurementSource" class="control-label"></label>
                <input asp-for="Weight!.MeasurementSource" class="form-control" />
                <span asp-validation-for="Weight!.MeasurementSource" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
